
@{
    ViewBag.Title = "Login";
}

<main class="container mt-5">
    <section class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Login</h2>
            <p class="lead text-center">Log in to your PokemonApp account</p>

            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Username:</label>
                    <input type="text" id="username" name="username" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password:</label>
                    <input type="password" id="password" name="password" class="form-control" required />
                </div>

                <button type="submit" class="btn btn-primary w-100">Let's go</button>
            </form>

            <p class="text-center mt-3">Do you have not account? <a asp-controller="Account" asp-action="Register">Register here</a></p>
        </div>
    </section>
</main>


